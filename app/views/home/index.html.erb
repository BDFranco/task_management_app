<h1>Welcome, <%= current_user.email %>!</h1>

<h2>Your Assigned Tasks</h2>

<% if @tasks.any? %>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <strong><%= task.title %></strong> - <%= task.status %>
        <br>
        <small>Due: <%= task.due_date || "No deadline" %></small>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No tasks assigned to you yet.</p>
<% end %>